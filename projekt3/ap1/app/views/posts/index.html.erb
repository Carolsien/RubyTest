<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% posts = Post.all %>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %> </td>
        <td><%= link_to post.user.login, post.user %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete %></td>
      </tr>
    <% end %>
    <% if posts.size == 0 %>
      <em>No posts found</em>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
